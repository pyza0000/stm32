/* Private variables ---------------------------------------------------------*/

/* USER CODE BEGIN PV */
static volatile uint32_t ic_period = 0;
static volatile uint32_t ic_high   = 0;
static volatile uint8_t  ic_ready  = 0;

static uint8_t rx_ch;                 // 1 znak z UART
static char rx_line[128];             // linia komendy
static uint16_t rx_idx = 0;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
static void uart_print(const char *s)
{
  HAL_UART_Transmit(&huart2, (uint8_t*)s, (uint16_t)strlen(s), 100);
}

// TIM2 i TIM3 są na APB1. Przy APB1 prescaler != 1 zegar timera = 2*PCLK1.
static uint32_t tim_apb1_clk_hz(void)
{
  uint32_t pclk = HAL_RCC_GetPCLK1Freq();
  if ((RCC->CFGR & RCC_CFGR_PPRE1) != RCC_CFGR_PPRE1_DIV1) return 2U * pclk;
  return pclk;
}

static int pwm_set_tim3_ch2(uint32_t freq_hz, uint8_t duty_percent)
{
  if (freq_hz < 1 || freq_hz > 200000) return -1;
  if (duty_percent > 100) return -2;

  uint32_t timclk = tim_apb1_clk_hz();

  uint32_t psc = 0;
  uint32_t arr;

  while (1)
  {
    uint64_t denom = (uint64_t)(psc + 1U) * (uint64_t)freq_hz;
    uint64_t tmp = (uint64_t)timclk / denom;
    if (tmp == 0) return -3;

    arr = (uint32_t)(tmp - 1ULL);

    if (arr <= 65535U) break;       // TIM3 jest 16-bit
    if (++psc > 65535U) return -4;
  }

  uint32_t ccr = (uint32_t)(((uint64_t)(arr + 1U) * duty_percent) / 100ULL);
  if (ccr > arr) ccr = arr;

  __HAL_TIM_DISABLE(&htim3);
  __HAL_TIM_SET_PRESCALER(&htim3, psc);
  __HAL_TIM_SET_AUTORELOAD(&htim3, arr);
  __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_2, ccr); // PC7 = TIM3_CH2
  __HAL_TIM_SET_COUNTER(&htim3, 0);
  __HAL_TIM_ENABLE(&htim3);

  return 0;
}

static void report_ic_uart(void)
{
  if (!ic_ready) return;
  ic_ready = 0;

  uint32_t timclk = tim_apb1_clk_hz();
  uint32_t psc = htim2.Instance->PSC;
  uint32_t tick_hz = timclk / (psc + 1U);

  float f = (ic_period > 0) ? ((float)tick_hz / (float)ic_period) : 0.0f;
  float duty = (ic_period > 0) ? (100.0f * (float)ic_high / (float)ic_period) : 0.0f;

  char buf[140];
  snprintf(buf, sizeof(buf),
           "IC: f=%.2f Hz, duty=%.1f%% (period=%lu, high=%lu)\r\n",
           f, duty, (unsigned long)ic_period, (unsigned long)ic_high);

  uart_print(buf);
}

// parser: "[Generate, 14000, 50%]"
static void handle_line(const char *line)
{
  if (strstr(line, "Generate") == NULL) return;

  const char *c1 = strchr(line, ',');
  const char *c2 = c1 ? strchr(c1 + 1, ',') : NULL;

  if (!c1 || !c2)
  {
    uart_print("ERR: format\r\n");
    return;
  }

  uint32_t freq = (uint32_t)strtoul(c1 + 1, NULL, 10);
  uint32_t duty = (uint32_t)strtoul(c2 + 1, NULL, 10); // '%' ignorujemy

  int r = pwm_set_tim3_ch2(freq, (uint8_t)duty);
  if (r == 0) uart_print("OK: PWM updated\r\n");
  else uart_print("ERR: params\r\n");
}

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_TIM3_Init();
  MX_TIM2_Init();
  /* USER CODE BEGIN 2 */
  // Start PWM (TIM3_CH2 na PC7/D9)
  HAL_TIM_PWM_Start(&htim3, TIM_CHANNEL_2);

  // Start Input Capture (TIM2 CH1 rising, CH2 falling)
  HAL_TIM_IC_Start_IT(&htim2, TIM_CHANNEL_1);
  HAL_TIM_IC_Start_IT(&htim2, TIM_CHANNEL_2);

  // Start odbioru UART po 1 znaku
  HAL_UART_Receive_IT(&huart2, &rx_ch, 1);

  uart_print("\r\nReady. Use: [Generate, 14000, 50%]\r\n");

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
	  static uint32_t t0 = 0;
	  if (HAL_GetTick() - t0 >= 200)
	  {
	    t0 = HAL_GetTick();
	    report_ic_uart();
	  }

  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

/* USER CODE BEGIN 4 */
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
  if (huart->Instance != USART2) return;

  char c = (char)rx_ch;

  if (c == '\r' || c == '\n')
  {
    if (rx_idx > 0)
    {
      rx_line[rx_idx] = 0;
      handle_line(rx_line);
      rx_idx = 0;
    }
  }
  else
  {
    if (rx_idx < (sizeof(rx_line) - 1))
    {
      rx_line[rx_idx++] = c;
    }
    else
    {
      // przepełnienie = kasujemy linię
      rx_idx = 0;
      uart_print("ERR: line too long\r\n");
    }
  }

  HAL_UART_Receive_IT(&huart2, &rx_ch, 1); // odbieraj dalej
}

void HAL_TIM_IC_CaptureCallback(TIM_HandleTypeDef *htim)
{
  if (htim->Instance != TIM2) return;

  if (htim->Channel == HAL_TIM_ACTIVE_CHANNEL_1)
  {
    ic_period = HAL_TIM_ReadCapturedValue(htim, TIM_CHANNEL_1);
  }
  else if (htim->Channel == HAL_TIM_ACTIVE_CHANNEL_2)
  {
    ic_high = HAL_TIM_ReadCapturedValue(htim, TIM_CHANNEL_2);
  }

  if (ic_period != 0 && ic_high <= ic_period) ic_ready = 1;
}

/* USER CODE END 4 */

