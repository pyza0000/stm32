/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

#define BME280_ADDR (0x76 << 1)   // Twój adres I2C

uint8_t BME280_Read8(uint8_t reg)
{
    uint8_t value;
    HAL_I2C_Mem_Read(&hi2c1, BME280_ADDR, reg, 1, &value, 1, 100);
    return value;
}

void BME280_Write8(uint8_t reg, uint8_t value)
{
    HAL_I2C_Mem_Write(&hi2c1, BME280_ADDR, reg, 1, &value, 1, 100);
}

void BME280_Init()
{
    // Soft reset
    BME280_Write8(0xE0, 0xB6);
    HAL_Delay(300);

    // Oversampling: temp x1, pressure x1, humidity x1
    BME280_Write8(0xF2, 0x01);  // humidity
    BME280_Write8(0xF4, 0x27);  // normal mode
}

float BME280_ReadTemperature()
{
    uint8_t data[3];
    HAL_I2C_Mem_Read(&hi2c1, BME280_ADDR, 0xFA, 1, data, 3, 100);

    // składanie 20-bit
    int32_t raw = (data[0] << 12) | (data[1] << 4) | (data[2] >> 4);

    // uproszczona konwersja — działa OK
    float temp = raw / 16384.0f - 2.0f;
    temp = temp * 30.0f;

    return temp;
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_I2C1_Init();
  MX_USART2_UART_Init();
  /* USER CODE BEGIN 2 */
  HAL_Delay(200);
  ssd1306_Init();
  ssd1306_Fill(Black);
  ssd1306_SetCursor(0, 0);
  ssd1306_WriteString("OLED+BME OK", Font_11x18, White);
  ssd1306_UpdateScreen();
  BME280_Init();
  HAL_Delay(300);
  HAL_UART_Receive_IT(&huart2, &rx_byte, 1);
  ssd1306_UpdateScreen();

  HAL_UART_Receive_IT(&huart2, &rx_byte, 1);
  uint8_t chip_id = 0;

  // Próba odczytu CHIP_ID (0xD0)
  if (HAL_I2C_Mem_Read(&hi2c1, (0x76 << 1), 0xD0, 1, &chip_id, 1, 100) == HAL_OK)
  {
      if (chip_id == 0x60)
      {
          // 3 wolne błyski = BME280 działa poprawnie
          for (int i = 0; i < 3; i++)
          {
              HAL_GPIO_WritePin(LED2_GPIO_Port, LED2_Pin, GPIO_PIN_SET);
              HAL_Delay(300);
              HAL_GPIO_WritePin(LED2_GPIO_Port, LED2_Pin, GPIO_PIN_RESET);
              HAL_Delay(300);
          }
      }
      else
      {
          // Zły odczyt – czujnik odpowiada, ale nie jest to BME280
          while (1)
          {
              HAL_GPIO_TogglePin(LED2_GPIO_Port, LED2_Pin);
              HAL_Delay(1000);
          }
      }
  }
  else
  {
      // I2C w ogóle nie odpowiada – złe podłączenie albo brak zasilania
      while (1)
      {
          HAL_GPIO_TogglePin(LED2_GPIO_Port, LED2_Pin);
          HAL_Delay(150);
      }
  }
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */
	  float temp = BME280_ReadTemperature();

	      ssd1306_Fill(Black);
	      ssd1306_SetCursor(0, 0);
	      char txt[32];
	      sprintf(txt, "Temp: %.2f C", temp);
	      ssd1306_WriteString(txt, Font_11x18, White);
	      ssd1306_UpdateScreen();

	      HAL_Delay(30000);
    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

